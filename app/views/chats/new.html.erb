<h1>Create Chat</h1>
<%= form_with model: @chat, local: true do |form| %> 
  <div>
   <%= form.label :sender_id, "Sender" %>
    <%= form.select :sender_id, @users.collect { |user| [user.first_name, user.id] }, prompt: "Select a sender" %>
  </div>
  <div>
   <%= form.label :reciever_id, "Receiver" %>
    <%= form.select :receiver_id, @users.collect { |user| [user.first_name, user.id] }, prompt: "Select a receiver" %>
  </div>
  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>
