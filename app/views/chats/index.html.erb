<h1>Chats</h1>
<ul>
  <% @chats.each do |chat| %>
    <% other_user = chat.sender == current_user ? chat.receiver : chat.sender %>
    <li>
      Chat With:
      <%= link_to("#{other_user.first_name} #{other_user.last_name}", chat_path(chat)) %>
      | <%= link_to "Edit", edit_chat_path(chat) %>
      | <%= link_to "Delete", chat_path(chat), data: {
            turbo_method: :delete,
            turbo_confirm: "Â¿Are you sure you want to delete this chat?"
        } %>
    </li>
  <% end %>
</ul>

