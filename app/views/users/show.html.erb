<h1>User Details</h1>
<h2><%= link_to "Volver", users_path%></h2>
<h2><%= link_to "Create new user", new_user_path%></h2>

<ul>
  <li><strong>ID:</strong> <%= @user.id %></li>
  <li><strong>Email:</strong> <%= @user.email %></li>
  <li><strong>Name:</strong> <%= @user.first_name %></li>
  <li><strong>Last Name:</strong> <%= @user.last_name %></li>
  <li><strong>Created at:</strong> <%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></li>
  <li><strong>Ãšltima Updated at:</strong> <%= @user.updated_at.strftime("%d/%m/%Y %H:%M") %></li>
</ul>


<hr>

<h2>Chats where user participates</h2>
<ul>
  <% @user.chats.each do |chat| %>
    <li>
      Chat with 
      <%= chat.sender == @user ? chat.receiver.first_name : chat.sender.first_name %>
      <%= link_to "View Chat", chat_path(chat) %>
    </li>
  <% end %>
</ul>

<hr>

<h2>Messages sent by user</h2>
<ul>
  <% @user.messages.each do |message| %>
    <li>
      "<%= message.body %>" in 
      <%= link_to "Chat ##{message.chat.id}", chat_path(message.chat) %>
    </li>
  <% end %>
</ul>